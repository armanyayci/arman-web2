@model Comment
@{
    ViewData["Title"] = "Contact";
}



   <div class="row comment-pd light-text pt-5" >
        <div class="col">
          <div>
            <div class="header justify-content-center pb-1 pt-3">
              <h3 class="text-center ">Your opinion is important for me.</h3>
            </div>
            <div >
              <form asp-action="Comments" asp-controller="Home" method="post">
                <div class="form-group">
                  <label for="name">Name</label>
                  <input asp-for="name" type="text" class="form-control nameinput" id="name" placeholder="Enter your name">
                </div>
                <div class="form-group">
                  <label for="comment">Comment</label>
                  <textarea asp-for="message" class="form-control" id="comment" rows="5" placeholder="Enter your comment"></textarea>
                </div class>
                <div class="text-center pt-2">
                  <button asp-action="Comments" asp-controller="Home" onclick="alert('Your comment is added.!')" type="submit" class="btn btn-primary ">Submit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

        
    <partial name="CommentsPartialView" action="CommentsPartial" model="CommentRepository.comments"/>
    
